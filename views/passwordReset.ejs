<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Passwort zur체cksetzen</title>
</head>
<body>
    <h1>Passwort zur체cksetzen</h1>
    <form id="reset-form">
        <input type="password" id="password" name="password" placeholder="Neues Passwort">
        <button type="button" onclick="resetPassword()">Passwort 채ndern</button>
    </form>

    <script>
        const token = window.location.pathname.split('/').pop();

        function resetPassword() {
            const password = document.getElementById('password').value;

            fetch(`/password-reset/reset/${token}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ password }),
            })
            .then(response => response.json())
            .then(data => alert(data.message))
            .catch(() => alert('Fehler beim Zur체cksetzen des Passworts'));
        }
    </script>
</body>
</html>